{
  "name": "wdio-chromedriver-service",
  "version": "7.2.8",
  "description": "WebdriverIO service to start & stop ChromeDriver",
  "author": "Mattias Ekstrand <mattias.ekstrand@gmail.com>",
  "homepage": "https://github.com/webdriverio-community/wdio-chromedriver-service#readme",
  "license": "MIT",
  "main": "./build",
  "types": "index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s clean compile",
    "clean": "rimraf ./build",
    "compile": "babel src/ -d build/ --config-file ./babel.config.js",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major",
    "test": "run-s test:*",
    "test:eslint": "eslint src tests",
    "test:unit": "jest",
    "watch": "npm run compile -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/webdriverio-community/wdio-chromedriver-service.git"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "wdio-service",
    "chromedriver",
    "tests"
  ],
  "bugs": {
    "url": "https://github.com/webdriverio-community/wdio-chromedriver-service/issues"
  },
  "peerDependencies": {
    "chromedriver": "*",
    "@wdio/cli": "^7.0.0",
    "@wdio/types": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "chromedriver": {
      "optional": true
    },
    "@wdio/types": {
      "optional": true
    }
  },
  "dependencies": {
    "@wdio/logger": "^7.5.3",
    "fs-extra": "^9.1.0",
    "split2": "^3.2.2",
    "tcp-port-used": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-function-bind": "^7.12.13",
    "@babel/plugin-proposal-optional-catch-binding": "^7.12.13",
    "@babel/plugin-syntax-export-default-from": "^7.12.13",
    "@babel/preset-env": "^7.12.17",
    "@babel/register": "^7.12.13",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-source-map-support": "^2.1.3",
    "chromedriver": "^91.0.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.6.2",
    "rimraf": "^3.0.2"
  },
  "contributors": [
    "Mattias Ekstrand <mattias.ekstrand@gmail.com>",
    "Erwin Heitzman <erwin.heitzman@gmail.com>"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 96,
        "lines": 96,
        "statements": 96
      }
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "packages/webdriverio/src/scripts",
      "packages/wdio-devtools-service/src/lighthouse",
      "packages/webdriverio/build",
      "packages/webdriver/build"
    ]
  }
}
